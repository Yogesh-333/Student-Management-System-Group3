<Window x:Class="StudentPortal.Views.AddStudentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Student" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Name:" />
            <TextBox Text="{Binding Name}" />
            <Label Content="Age:" />
            <TextBox Text="{Binding Age}" />
            <Label Content="CourseName:" />
            <TextBox Text="{Binding CourseName}" />
            <Label Content="ContactNumber:" />
            <TextBox Text="{Binding ContactNumber}" />
            <Button Content="Add Student" Command="{Binding AddStudentCommand}" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
