<Window x:Class="StudentPortal.Views.AddAttendanceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Attendance" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Student ID:" />
            <TextBox Text="{Binding StudentId}" />
            <Label Content="Date:" />
            <DatePicker x:Name="DatePickerControl" SelectedDate="{Binding Date}" />
            <!-- Ensure x:Name is here -->
            <Label Content="Present:" />
            <CheckBox IsChecked="{Binding Present}" />
            <Button Content="Add Attendance" Command="{Binding AddAttendanceCommand}" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
