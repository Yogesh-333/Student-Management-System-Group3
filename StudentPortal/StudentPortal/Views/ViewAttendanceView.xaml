<Window x:Class="StudentPortal.Views.ViewAttendanceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Attendance" Height="400" Width="600">
    <Grid>
        <DataGrid ItemsSource="{Binding AttendanceRecords}" AutoGenerateColumns="False" Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Student ID" Binding="{Binding StudentId}" />
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
                <DataGridCheckBoxColumn Header="Present" Binding="{Binding Present}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
