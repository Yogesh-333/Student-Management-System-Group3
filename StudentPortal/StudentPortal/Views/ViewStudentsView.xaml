<Window x:Class="StudentPortal.Views.ViewStudentsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Students" Height="400" Width="600">
    <Grid>
        <DataGrid ItemsSource="{Binding Students}" AutoGenerateColumns="False" Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Date of Birth" Binding="{Binding DateOfBirth}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
